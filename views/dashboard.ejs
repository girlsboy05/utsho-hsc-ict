
<div class="mb-3 d-flex justify-content-between align-items-center flex-wrap gap-2">
  <div>
    <h1 class="h4 mb-0" style="color:#1C110D;">Welcome, <%= user.name %> (<span class="text-danger"><%= user.roll %></span>)</h1>
    <div class="small text-muted">Mobile: <%= user.mobile %></div>
  </div>
  <div id="countdown" class="alert alert-light border d-flex align-items-center gap-3 mb-0">
    <i class="bi bi-clock h5 mb-0"></i>
    <div>
      <div class="fw-semibold">Next module in <span id="timeLeft">--:--:--</span></div>
      <div class="small" id="nextMeta"></div>
    </div>
    <button id="nextDetails" class="btn btn-sm btn-outline-danger ms-2">Details</button>
  </div>
</div>

<div id="ongoing" class="alert alert-danger d-none">Ongoing class</div>

<div class="accordion" id="weeks"></div>

<!-- Details Modal -->
<div class="modal fade" id="detailModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Module Details</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body" id="modalBody">...</div>
      <div class="modal-footer" id="modalFooter"></div>
    </div>
  </div>
</div>


